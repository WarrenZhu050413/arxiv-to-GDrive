{
    "manifest_version": 3,
    "name": "Paper-to-GDrive",
    "version": "0.5",
    "description": "This is a chrome extension to download papers into google drive. It currently supports arXiv and ACM papers.",
    "permissions": [
        "tabs",
        "downloads",
        "identity",
        "declarativeNetRequest",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "https://arxiv.org/*",
        "https://dl.acm.org/doi/*",
        "https://www.usenix.org/conference/*",
        "https://www.usenix.org/system/files/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "commands": {
        "SavePaper": {
          "suggested_key": {
            "default": "Ctrl+Shift+E",
            "mac": "Command+E"
          },
          "description": "Save current paper to Google Drive."
        },
        "SavePaperWithCustomTitle": {
          "suggested_key": {
            "default": "Ctrl+Shift+X",
            "mac": "Command+X"
          },
          "description": "Save current paper to Google Drive with custom title."
        },
        "set_folder_path": {
          "suggested_key": {
             "default": "Ctrl+Shift+P",
             "mac": "Command+Shift+P"
           },
          "description": "Open Folder Path Settings"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "oauth2": {
        "client_id": "36293396270-ivqrqj7jtpt483ilg06uo1s65eism0h7.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/drive"
        ]
    },
    "action": {
        "default_icon": {
            "19": "images/icon_19.png",
            "32": "images/icon_32.png",
            "48": "images/icon_48.png",
            "128": "images/icon_128.png"
        },
        "default_title": "paper pdf downloader",
        "default_popup": "popup.html"
    },
    "icons": {
        "19": "images/icon_19.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    }
}